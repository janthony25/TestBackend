@model IEnumerable<tblCustomerList>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Customer Name
            </th>
            <th>
                Car Make
            </th> 
            <th>
                Car Model
            </th>
            <th>
                Rego
            </th>
            <th>
                Payment Status
            </th>
            <th>
                Work Status
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var customer in Model)
        {
            <tr>
                <td>
                    @customer.FullName
                </td>
                <td>
                    @customer.CarMake
                </td>
                <td>
                    @customer.CarModel
                </td>
                <td>
                    @customer.CarRego
                </td>
                <td>
                    
                    @if(customer.Paid == true)
                    {
                      
                    }

                </td>
            </tr>
        }
    </tbody>
</table>